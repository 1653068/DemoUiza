<script>
    $(document).ready(() => {
        $("#start").click(() => {
            var a = $("#start");
            if (a.text() == 'Start') {
                a.text('Stop');
                a.removeClass('btn-start');
                a.addClass('btn-stop');
            } else {
                a.text('Start');
                a.removeClass('btn-stop');
                a.addClass('btn-start');
            }
        });
    })
</script>

<h4>Event detail</h4>
<div class="container">
    <div class="livestream-event">
        {{#if retrieveLive.poster}}
        <img src="{{retrieveLive.poster}}" alt="Poster">
        {{else}}
        <img src="./public/img/folder.jpg" alt="Poster">
        {{/if}}
        <span>{{retrieveLive.name}}</span>
    </div>
    <div class="livestream-button">
        <div class="button-container">
            <button id="start" class="btn btn-start">Start</button>
            <button class="btn btn-dark">Update</button>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
<div>
    <a href="/livestream/{{retrieveLive.id}}"></a>
</div>